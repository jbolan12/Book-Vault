        <ul class="nav nav-pills">
            <li class="nav-item">
                <a href="/" aria-current="page" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a href="/books" class="nav-link">Books</a>
            </li>
            <li class="nav-item">
                <a href="/add-book" class="nav-link">Add Book</a>
            </li>
        </ul>
    </header>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
            <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis">Edit Book Details</h1>
                <p class="lead">Update the details of the book below.</p>
                <form action="/edit-book/<%= book.id %>" method="POST">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= book.title %>" required>

                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" value="<%= book.author %>" required>

                    <label for="isbn">ISBN:</label>
                    <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>" placeholder="Optional">

                    <label for="rating">Rating:</label>
                    <input type="number" id="rating" name="rating" min="1" max="5" value="<%= book.rating %>" required>

                    <label for="date_read">Date Read:</label>
                    <input type="date" id="date_read" name="date_read" value="<%= book.date_read %>" required>

                    <label for="notes">Notes:</label>
                    <textarea id="notes" name="notes" placeholder="Optional notes about the book"><%= book.notes %></textarea>

                    <button type="submit">Update Book</button>
                </form>

                <a href="/books">Back to Books List</a>
            </div>
            <div class="col-lg-5 p-0 overflow-hidden shadow-lg">
                <img id="book-cover" class="rounded-lg-3 img-fluid" src="<%= book.cover_url %>" alt="Book Cover">
            </div>
        </div>
    </div>

